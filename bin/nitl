#!/usr/bin/env ruby
# frozen_string_literal: true

# Add lib directory to load path
lib_dir = File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib'))
$LOAD_PATH.unshift(lib_dir) unless $LOAD_PATH.include?(lib_dir)

require 'nitl'

# Parse arguments
case ARGV[0]
when 'init'
  Nitl::Run::Init.run
when 'plan'
  if ARGV[1].nil?
    puts "Usage: nitl plan <github_issue_number>"
    exit 1
  end
  Nitl::Run::Plan.run(ARGV[1])
when 'feedback'
  if ARGV[1].nil?
    puts "Usage: nitl feedback <github_issue_number>"
    exit 1
  end
  Nitl::Run::Feedback.run(ARGV[1])
when 'remove'
  if ARGV[1].nil?
    puts "Usage: nitl remove <github_issue_number>"
    exit 1
  end
  Nitl::Run::Remove.run(ARGV[1])
when '--version', '-v'
  puts "nitl #{Nitl::VERSION}"
else
  if ARGV.empty? || ARGV[0] == '--help' || ARGV[0] == '-h'
    puts "Usage: nitl <command> [options]"
    puts ""
    puts "Commands:"
    puts "  init                    Initialize NITL in the current repository"
    puts "  plan <issue_number>     Generate and execute plan for GitHub issue"
    puts "  feedback <issue_number> Handle PR review feedback"
    puts "  remove <issue_number>   Remove branch, worktree, and remote branch for issue"
    puts ""
    puts "Options:"
    puts "  --version, -v           Show version"
    puts "  --help, -h              Show this help message"
    exit 0
  else
    puts "Unknown command: #{ARGV[0]}"
    puts "Run 'nitl --help' for usage information"
    exit 1
  end
end
